<script type="text/javascript">
    $(document).ready(function () {
        $("#navhead").text("Recon-Between A/cs");
        kendodate_format();
        getreconlist();

    });

    function getreconlist() {
        debugger;
        var data = {};
        data.in_recontype_code = 'B';
        var Context = data;
        $.ajax({
            type: "POST",
            url: '../Recon/getReconAgainstTypeCode',
            dataType: 'json',
            data: JSON.stringify(data),
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                debugger;
                $("#reconname").empty();
                $("#reconname").append($('<option>', {
                    value: "",
                    text: "  Select  "
                }));
                $.each(response, function (index, item) {
                    $("#reconname").append($('<option>', {
                        value: item.recon_code,
                        text: item.recon_name
                    }));
                });
            },
            error: function (er) {
                alert(er)
                console.log(er)
            }
        });
    }

    function run() {
        debugger;
        var in_recon_code = $("#reconname").val();
        var in_tran_date = $("#tran_date").val();
        var ts = in_tran_date.split("/");
        var pr = ts[2] + "-" + ts[1] + "-" + ts[0];
        $.ajax({
            type: "POST",
            url: '../Reports/reconbetweenacc',
            dataType: 'json',
            async: false,
            data: JSON.stringify({ in_recon_code: in_recon_code, in_tran_date: pr }),
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                debugger;
                var res = JSON.parse(response)
                if (res.length > 0) {
                    loadGrid(res);
                } else {
                    loadGrid([]);
                }
            },
            error: function (er) {
                debugger;
                alert(er)
                console.log(er)
            }
        });
    }

    function loadGrid(data) {
        try {
            $("#grid_dataset").kendoGrid({
                dataSource: {
                    data: data,
                    pageSize: 20,
                    schema: {
                        model: {
                            fields: {
                                brs_gid: { type: "string" },
                                particulars: { type: "string" },
                                tran_value: { type: "string" },
                                tran_acc_mode: { type: "string" },
                                bal_value: { type: "string" },
                            }
                        }
                    }
                },
                height: 350,
                groupable: false,
                dataBound: function (e) {
                    var grid = this; // "this" refers to the Kendo Grid
                    var rows = grid.tbody.children();

                    rows.each(function () {
                        var rowDataItem = grid.dataItem(this);
                        if (rowDataItem.particulars === "Add" || rowDataItem.particulars === "Subtotal" || rowDataItem.particulars === "Less" || rowDataItem.particulars === "Arrived Balance") {
                            $(this).css("color", "red");
                        }
                        if (rowDataItem.tran_acc_mode === "CR" || rowDataItem.tran_acc_mode === "DR") {
                            $(this).css("color", "blue");
                        }
                    });
                },
                pageable: false,
                sortable: true,
                selectable: true,
                filterable: false,
                navigatable: true,
                columns: [
                    {
                        field: "brs_gid",
                        title: "brs_gid",
                        width: 100,
                        hidden: true,
                        attributes: { style: "text-align: right;" },
                    },

                    {
                        field: "particulars",
                        title: "Particular",
                        width: 200,
                    },
                    {
                        field: "tran_value",
                        title: "Amount",
                        width: 100,
                        attributes: { style: "text-align: right;" },
                    },
                    {
                        field: "tran_acc_mode",
                        title: "Account Mode",
                        width: 50,
                    },
                    {
                        field: "bal_value",
                        title: "Balance Amount",
                        width: 100,
                        attributes: { style: "text-align: right;" },
                    }],

                editable: false,

            });
        }
        catch (err) {
            console.log(err)

        }
    }

</script>