<script type="text/javascript">
	$(document).ready(function () {
		
	});

	function setlocalStorage(key, value) {
		var data = "";
		data[key] = value[0];
		localStorage.setItem(key, JSON.stringify(value));
	}
	function validation() {
		var msg = "";
		if ($("#txtusername").val() != "") {

		}
		else {
			msg += "Please Enter User Name";
		}
		if (msg == "") {
			// window.location.href = "../Dashboard/Dashboard";
			loginvalidation()
		} else {
			$.dialog({
				title: 'Impact',
				content: msg,
				type: 'green',
			});
		}
		return msg;
	}

	function loginvalidation() {
		var UserName = $("#txtusername").val();
		var Password = $("#txtpwd").val();
		$.ajax({
			type: "POST",			
			url: '@Url.Action("Login_validation", "Login")',
			async: false,
			data: JSON.stringify({
				UserName: UserName,
				Password: Password
			}),
			contentType: 'application/json; charset=utf-8',
			success: function (data) {
				var response = JSON.parse(data);
				if (response[0].passwordreset == 'Y') {
					var rs = JSON.stringify(response[0]);
					sessionStorage.setItem("recon_userdetail", rs);
					var txtusrname = sessionStorage.getItem("recon_userdetail");
					var txtusername = JSON.parse(txtusrname);
					sessionStorage.setItem("lastlogindb", txtusername.lastlogin);
					sessionStorage.setItem("usrname", txtusername.user_code);
					sessionStorage.setItem("passflag", txtusername.passwordreset);
					location.href = "@Url.Action("ChangePassword", "Login")";
				}
				else {
					if (response[0].msg == "Login success !") {
						var rs = JSON.stringify(response[0]);
						sessionStorage.setItem("recon_userdetail", rs);
						var txtusrname = sessionStorage.getItem("recon_userdetail");
						var txtusername = JSON.parse(txtusrname);
						sessionStorage.setItem("lastlogindb", txtusername.lastlogin);
						sessionStorage.setItem("usrname", txtusername.user_code);
						sessionStorage.setItem("passflag", txtusername.passwordreset);
						window.location.href = '@Url.Action("Index", "Home")';
					} else if (response[0].result == 2) {
						var rs = JSON.stringify(response[0]);
						sessionStorage.setItem("recon_userdetail", rs);
						var txtusrname = sessionStorage.getItem("recon_userdetail");
						var txtusername = JSON.parse(txtusrname);
						var usercode = txtusername.user_code;
						var status = "logout";
						$.ajax({
							type: "POST",
							url: '../Login/lastloginsession',
							dataType: 'json',
							async: true,
							data: JSON.stringify({ user_code: usercode, status: status }),
							contentType: 'application/json; charset=utf-8',
							success: function (response) {

							}
						})
						$.alert({
							title: 'Recon',
							content: response[0].msg,
							type: 'green',
						});
					}
					else {
						$.alert({
							title: 'Recon',
							content: response[0].msg,
							type: 'green',
						});						
					}
				}
			},
			error: function (er) { }
		});
	};

	function ForgotPassword() {
		var url = '@Url.Action("ForgetPassword", "login")'
		window.location.href = url;
		//window.location.href = '../login/ForgetPassword';
	}
	
</script>