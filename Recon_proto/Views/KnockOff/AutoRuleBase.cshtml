    function grid_rule(data) {
        $("#grid_preview").kendoGrid({
            dataSource: {
                data: data,
                pageSize: 15,
                schema: {
                    model: {
                        fields: {
                            recon_gid: { type: "string" },
                            recon_code: { type: "string" },
                            recon_name: { type: "string" },
