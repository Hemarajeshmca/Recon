<body class="hold-transition skin-blue sidebar-mini fixed">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card-body" style="margin-top: -3%; min-height: 82%;">
                <div class="row" style="margin-top:20px;">
                    <div class="col-xs-12">
                        <i data-bs-toggle="modal" onclick="getdetailSelectedRows(this)" id="userfieldadd" value='create' class="fa fa-plus cursor-pointer" aria-hidden="true" style="color:green"></i>
                        <div id="grid_user">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="newdebit" tabindex="-1" aria-hidden="true">
