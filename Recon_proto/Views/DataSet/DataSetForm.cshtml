		var in_user_code = sessionStorage.getItem("usrname");
		$.ajax({
			type: "POST",
			url: '../DataSet/Datasetindexlist',
			dataType: 'json',
			async: false,
			data: JSON.stringify({ in_datasetindex_code: in_datasetindex_code, in_user_code: in_user_code }),
			contentType: 'application/json; charset=utf-8',
			success: function (response) {			
				if (response != null) {
						var result = JSON.parse(response);	
						var arrchecked = [];								
						for (i = 0; result.length > i; i++) {
							var list1 = {};
							list1.value = result[i].field_name;							
							arrchecked.push(result[i].field_name);                  
						}
						dropdown.list.find(".check-input").each(function () {
							if (arrchecked.includes($(this).val())) {
								$(this).prop("checked", true); // Check the item
							} else {
								$(this).prop("checked", false); // Uncheck all others
							}
						});
						updateDropDown();
				}
			}
		});
	}
	function myDeleteJsindex() {
		if ($("#txtmode").val() != "View") {
			    var grid = $("#grid_datasetindex").data("kendoGrid");
				var selectedItem = grid.dataItem(grid.select());
			$.confirm({
				icon: 'fa fa-warning',
				title: 'Recon',
				autoClose: 'cancel|10000',
				theme: 'dark',
				animationSpeed: 700,
				content: 'Are you sure do you want to delete this record!',
				type: 'orange',
				buttons: {
					confirm: function () {
						var datasetindexfield = "";
						var index_seqno = 0;
						var indexname = "";
						var dataset_code1 ="";
						var in_action = "DELETE";
						var in_datasetindex_gid = selectedItem.datasetindex_gid;
						var in_active_status ='Y';		
						var action_by = sessionStorage.getItem("usrname");
						var in_datasetindex_code = selectedItem.datasetindex_code;
						
						$.ajax({
							type: "POST",
							url: '../DataSet/Datasetindex',
							dataType: 'json',
							data: JSON.stringify({ in_dataset_code: dataset_code1, in_datasetindex_gid: in_datasetindex_gid,
									in_datasetindex_code: in_datasetindex_code, in_index_seqno: index_seqno, in_index_desc: indexname, 
									in_dataset_field: datasetindexfield, in_active_status: in_active_status,in_index_name:indexname,
									in_action: in_action, in_action_by: action_by}),
							contentType: 'application/json; charset=utf-8',
							success: function (response) {
								var data = response;
								if (data.out_result == "1") {
									$.alert({
										icon: 'fa fa-success',
										title: 'Recon',
										theme: 'dark',
										content: data.out_msg,
										type: 'green',
										animationSpeed: 700,
									});
