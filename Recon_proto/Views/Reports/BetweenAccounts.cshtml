						</button>
					</div>
				</div>

				<div id="grid_dataset"></div>
			</div>
		</div>
	</div>
</body>
</html>
<script type="text/javascript">
	$(document).ready(function () {
		$("#navhead").text("Recon-Between A/cs");
		kendodate_format();
		getreconlist();
		$("#exportExcel").hide();
		$("#monthendexcel").hide();
	});

	function getreconlist() {
		var data = {};
		data.in_recontype_code = 'B';
		var Context = data;
		$.ajax({
			type: "POST",
			url: '../Recon/getReconAgainstTypeCode',
			dataType: 'json',
			data: JSON.stringify(data),
			contentType: 'application/json; charset=utf-8',
			success: function (response) {
				$("#reconname").empty();
				$("#reconname").append($('<option>', {
					value: "",
					text: "  Select  "
				}));
				$.each(response, function (index, item) {
					if (item.active_status == 'Y') {
						$("#reconname").append($('<option>', {
							value: item.recon_code,
							text: item.recon_name
						}));
					}
				});
			},
			error: function (er) {
				alert(er)
				console.log(er)
			}
		});
	}

	function run() {
		var tranDate = validateDateFormat($("#tran_date").val());
		var in_recon_code = $("#reconname").val();
		if (tranDate && in_recon_code) {
			var in_tran_date = $("#tran_date").val();
			var ts = in_tran_date.split("/");
			var pr = ts[2] + "-" + ts[1] + "-" + ts[0];
			$.ajax({
				type: "POST",
				url: '../Reports/reconbetweenacc',
				dataType: 'json',
				data: JSON.stringify({ in_recon_code: in_recon_code, in_tran_date: pr }),
				contentType: 'application/json; charset=utf-8',
				success: function (response) {
					var res = JSON.parse(response)
					if (res.length > 0) {
						loadGrid(res);
						$("#exportExcel").show();
						$("#monthendexcel").show();
					} else {
						loadGrid([]);
					}
				},
				error: function (er) {
					console.log(er)
				}
			});
		} else if (!in_recon_code) {
			$.alert({
				title: 'Recon',
				content: 'Please select Recon ..!',
				type: 'red',
			});
		} else if (!tranDate) {
			$.alert({
				title: 'Recon',
				content: 'Invalid Tran Date ..!',
				type: 'red',
			});
		}
	}

	function loadGrid(data) {
		try {
			$("#grid_dataset").kendoGrid({
				dataSource: {
					data: data,
					pageSize: 20,
					schema: {
						model: {
							fields: {
								brs_gid: { type: "string" },
								particulars: { type: "string" },
								tran_value: { type: "string" },
								tran_acc_mode: { type: "string" },
								bal_value: { type: "string" },
							}
						}
					}
				},
				height: 380,
				groupable: false,
				dataBound: function (e) {
					var grid = this; // "this" refers to the Kendo Grid
					var rows = grid.tbody.children();

					rows.each(function () {
						var rowDataItem = grid.dataItem(this);
						if (rowDataItem.particulars === "Add" || rowDataItem.particulars === "Subtotal" || rowDataItem.particulars === "Less" || rowDataItem.particulars === "Arrived Balance") {
							$(this).css("color", "red");
						}
						if (rowDataItem.tran_acc_mode === "CR" || rowDataItem.tran_acc_mode === "DR") {
							$(this).css("color", "blue");
						}
					});
				},
				pageable: false,
				sortable: false,
				selectable: false,
				filterable: false,
				navigatable: true,
				columns: [
					{
						field: "brs_gid",
						title: "brs_gid",
						width: 100,
						hidden: true,
						attributes: { style: "text-align: right;" },
					},

					{
						field: "particulars",
						title: "Particular",
						width: 200,
					},
					{
						field: "tran_value",
						title: "Amount",
						width: 100,
						attributes: { style: "text-align: right;" },
					},
					{
						field: "tran_acc_mode",
						title: "Account Mode",
						width: 50,
					},
					{
						field: "bal_value",
						title: "Balance Amount",
						width: 100,
						attributes: { style: "text-align: right;" },
					}],

				editable: false,

			});
		}
		catch (err) {
			console.log(err)
		}
	}

	function monthbrs() {
		var tranDate = validateDateFormat($("#tran_date").val());
		var in_recon_code = $("#reconname").val();
		if (tranDate && in_recon_code) {
			var in_recon_name = $("#reconname").find(":selected").text();
			var in_tran_date = $("#tran_date").val();
			var ts = in_tran_date.split("/");
			var pr = ts[2] + "-" + ts[1] + "-" + ts[0];
			window.location.href = '@Url.Action("kendogrid_download", "Reports")?in_tran_date=' + pr + '&in_recon_code=' + in_recon_code + '&in_recon_name=' + in_recon_name + '';
		} else if (!tranDate) {
			$.alert({
				title: 'Recon',
				content: 'Invalid Tran Date ..!',
				type: 'red',
			});
		} else if (!in_recon_code) {
			$.alert({
				title: 'Recon',
				content: 'Please Select Recon ..!',
				type: 'red',
			});
		}
	}

	function monthendbrs() {
		var in_recon_code = $("#reconname").val();
		var tranDate = validateDateFormat($("#tran_date").val());
		if (tranDate && in_recon_code) {
			var in_recon_name = $("#reconname").find(":selected").text();
			var in_tran_date = $("#tran_date").val();
			var ts = in_tran_date.split("/");
			var pr = ts[2] + "-" + ts[1] + "-" + ts[0];
			window.location.href = '@Url.Action("monthendreport", "Reports")?in_tran_date=' + pr + '&in_recon_code=' + in_recon_code + '&in_recon_name=' + in_recon_name + '';
		} else if (!tranDate) {
			$.alert({
				title: 'Recon',
				content: 'Invalid Tran Date ..!',
				type: 'red',
			});
		} else if (!in_recon_code) {
			$.alert({
				title: 'Recon',
				content: 'Please Select Recon ..!',
				type: 'red',
			});
		}
	}

	function customReport() {
		var tranDate = validateDateFormat($("#tran_date").val());
		var in_recon_code = $("#reconname").val();
		if (tranDate && in_recon_code) {
			var in_recon_name = $("#reconname").find(":selected").text();
			var in_tran_date = $("#tran_date").val();
			var ts = in_tran_date.split("/");
			var pr = ts[2] + "-" + ts[1] + "-" + ts[0];
			window.location.href = '@Url.Action("customReport_brsSummary", "Reports")?in_tran_date=' + pr + '&in_recon_code=' + in_recon_code + '&in_recon_name=' + in_recon_name + '';
		} else if (!tranDate) {
			$.alert({
				title: 'Recon',
				content: 'Invalid Tran Date ..!',
				type: 'red',
			});
		} else if (!in_recon_code) {
			$.alert({
				title: 'Recon',
				content: 'Please Select Recon ..!',
				type: 'red',
			});
		}
	}

	//Date Validation

	document.addEventListener('DOMContentLoaded', function () {
		const dateInput = document.getElementById('tran_date');
		dateInput.addEventListener('focusout', onFocusOut);
	});

</script>