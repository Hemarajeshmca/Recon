<script>
	$(document).ready(function () {
		getGridComboList();
		$("#navhead").text("Dataset");
		grid_datasetfield([]);
		grid_datasetindex([]);
		$("#btncoll").hide();
	});
	function fieldtype() {
		var FieldType = $("#cmbFieldType").val();
		if (FieldType == "NUMERIC") {
			$("#fielddataset").hide();
			$("#numeric").show();
			$("#fieldlength").prop('disabled', false);
			$("#fieldPrecision").prop('disabled', false);
			$("#fieldscale").prop('disabled', false);
			$("#fieldlength").val('');
			$("#fieldPrecision").val('');
			$("#fieldscale").val('');
		} else if (FieldType == "DATE" || FieldType == "DATETIME") {
			$("#fieldlength").val("");
			$("#fieldPrecision").val("");
			$("#fieldscale").val("");
			$("#fieldlength").prop('disabled', true);
			$("#fieldPrecision").prop('disabled', true);
			$("#fieldscale").prop('disabled', true);
		} else {
			$("#fielddataset").show();
			$("#numeric").hide();
			$("#fieldlength").prop('disabled', false);
			$("#fieldPrecision").prop('disabled', false);
			$("#fieldscale").prop('disabled', false);
			$("#fieldlength").val("");
			$("#fieldPrecision").val("");
			$("#fieldscale").val("");
		}
	}
	function load() {
		if (getlocalStorage('btn_clk_val') == "Create") {
			$("#txtmode").val(getlocalStorage('btn_clk_val'));
			$("#txtstatus").val("Draft");
		}
		else if (getlocalStorage('btn_clk_val') == "Edit") {
			if (getlocalStorage("ls_pageList") != undefined) {
				var data = getlocalStorage("ls_pageList");
				var cat = data.dataset_category;
				$("#txtmode").val(getlocalStorage('btn_clk_val'));
				$("#datasetname").val(data.dataset_name);
				$("#cmbcategory").val(cat);
				$("#txtdatasetcode").val(data.dataset_code);
				$("#txtstatus").val(data.active_status_desc);
				$("#datasetgid").val(data.dataset_gid);
				$("#datasetfieldadd").show();
				detailsfetch(data.dataset_gid);
				$("#Cmbclone").prop('disabled', true)
				$("#btnclone").prop('disabled', true)
			}
		} else if (getlocalStorage('btn_clk_val') == "View") {
			if (getlocalStorage("ls_pageList") != undefined) {
				var data = getlocalStorage("ls_pageList");
				var cat = data.dataset_category;
				$("#txtmode").val(getlocalStorage('btn_clk_val'));
				$("#datasetname").val(data.dataset_name);
				$("#cmbcategory").val(cat);
				$("#txtdatasetcode").val(data.dataset_code);
				$("#txtstatus").val(data.active_status_desc);
				$("#datasetgid").val(data.dataset_gid);
				detailsfetch(data.dataset_gid)
				$("#Cmbclone").prop('disabled', true)
				$("#btnclone").prop('disabled', true)
				$("#savesubmit").hide();
				$("#adddataset").hide();
				$("#datasetfieldadd").hide();
				$(".k-grid-edit").hide();
				$("#btnsubmit").hide();
			}
		}
	}
	function detailsfetch(datasetgid) {
		var in_user_code = sessionStorage.getItem("usrname");
		$.ajax({
			type: "POST",
			url: '../DataSet/Datasetdetailreadlist',
			dataType: 'json',
			data: JSON.stringify({ dataset_gid: datasetgid, in_user_code: in_user_code }),
			contentType: 'application/json; charset=utf-8',
			success: function (response) {				
				if (response != null) {
					var result = JSON.parse(response);
					$("#datasetname").val(result.Header[0].dataset_name);
					$("#cmbcategory").val(result.Header[0].dataset_category);
					$("#txtdatasetcode").val(result.Header[0].dataset_code);
					$("#txtstatus").val(result.Header[0].active_status_desc);
					$("#datasetgid").val(result.Header[0].dataset_gid);
					if (result.Header[0].active_status == 'N') {
						$("#savesubmit").hide();
						$("#adddataset").hide();
						$("#datasetfieldadd").hide();
						$(".k-grid-edit").hide();
						$("#btnsubmit").hide();
					}
					$("#gd_datasetfield").empty();
					$("#gd_datasetfield").append("<div id='grid_datasetfield'></div>");
					grid_datasetfield(result.DataSet);
					grid_datasetindex(result.DataSetindex);
					if (response.length > 0) {
						$("#Cmbclone").val();
						$("#Cmbclone").prop('disabled', true)
						$("#btnclone").prop('disabled', true)
					}
				}
				else {
					grid_datasetfield([]);
				}
			},
			error: function (er) {
				alert(er)
				console.log(er)
			}

		});
	}
	function saveheader() {
		try {
			var dataset_name = $("#datasetname").val();
			var dataset_category = $("#cmbcategory").val();
			var dataset_code = $("#txtdatasetcode").val();
			var clone_dataset = $("#Cmbclone").val();
			var action = "";
			var dataset_id = $("#datasetgid").val();

			if (dataset_id > 0) {
				dataset_id = $("#datasetgid").val();
				return;
			} else {
				dataset_id = 0;
			}

			if ($("#txtmode").val() == "Create") {
				action = "INSERT"
			} else if ($("#txtmode").val() == "Edit") {
				action = "UPDATE"
			}
			var action_by = sessionStorage.getItem("usrname");;
			var status = "D"
			var inactive_reason = "";
			$.ajax({
				type: "POST",
				url: '../DataSet/Datasetheader',
				dataType: 'json',
				data: JSON.stringify({ dataset_name: dataset_name, dataset_category: dataset_category, datasetCode: dataset_code, clone_dataset: clone_dataset, in_action: action, in_action_by: action_by, dataset_id: dataset_id, active_status: status, inactive_reason: inactive_reason }),
				contentType: 'application/json; charset=utf-8',
				success: function (response) {
					var result = JSON.parse(response);
					var data = result[0];
					if (data.out_result == "1") {
						//$.alert({
						//	title: 'Recon',
						//	content: data.out_msg,
						//	type: 'green',
						//});
						detailsfetch(data.in_dataset_gid);
						$("#datasetgid").val(data.in_dataset_gid);
					} else {
						$.alert({
							title: 'Recon',
							content: data.out_msg,
							type: 'red',
						});
					}
				},
				error: function (er) {
					alert(er)
					console.log(er)
				}

			});
		}
		catch (e) {
			console.log(e)
		}
	}
	function grid_datasetfield(data) {
		$("#grid_datasetfield").kendoGrid({
			dataSource: {
				data: data,
				pageSize: 5,
				schema: {
					model: {
						fields: {
							datasetfield_gid: { type: "string" },
							slno: { type: "string" },
							field_name: { type: "string" },
							field_type: { type: "string" },
							fieldtype_desc: { type: "string" },
							field_length: { type: "string" },
							precision_length: { type: "string" },
							scale_length: { type: "string" },
							field_mandatory: { type: "string" },
							dataset_table_field: { type: "string" },
							In_mode_flag: { type: "string", defaultValue: "I" }
						}
					}
				},
			},
			height: 240,
			groupable: false,
			dataBound: function (e) {
				resultData = e.sender._data;
				var rows = $('#grid_datasetfield').data('kendoGrid').tbody.children();
				setColor(rows, resultData);
				if ($("#txtmode").val() == "View") {
					$(".k-grid-edit").hide();
					$(".k-grid-delete").hide();
				}
			},
			sortable: false,
			selectable: true,
			filterable: false,
			navigatable: true,
			pageable: true,
			resizable: true,
			pageable: {
				refresh: false,
				pageSizes: true,
				buttonCount: 5
			},
			columns: [{
				command: [
					{
						name: "edit",
						id: "Edit",
						template: "<a href='' onclick='getdetailSelectedRows(this)' value='edit' class='k-grid-edit' data-bs-toggle='modal'><img src = '../Assets/images/editicons.png'></a>&nbsp;&nbsp;&nbsp;",
					},
					{
						name: "Delete",
						id: "Delete",
						template: "<a href='' onclick='myDeleteJs()' class='k-grid-delete' data-bs-toggle='modal'><img src = '../Assets/images/del.png' href='../DataSet/DataSetForm'></a>&nbsp;&nbsp;&nbsp;"
					},
				], title: "Action&nbsp;", width: "40px",
			},
			{
				field: "datasetfield_gid",
				title: "datasetfield_gid",
				width: 100,
				hidden: true,
			},
			{
				field: "slno",
				title: "Sl no",
				width: 100,
				hidden: true,
			},
			{
				field: "field_name",
				title: "Dataset Field",
				width: 100,
			},
			{
				field: "field_type",
				title: "Field Type",
				width: 100,
				hidden: true,
			},
			{
				field: "fieldtype_desc",
				title: "Field Type",
				width: 100,
