            },
            height: 407,
            groupable: false,
            dataBound: function (e) {
                resultData = e.sender._data;
                var rows = $('#grid_preview').data('kendoGrid').tbody.children();
                setColor(rows, resultData);
            },
            sortable: true,
            selectable: true,
            filterable: true,
            navigatable: true,
