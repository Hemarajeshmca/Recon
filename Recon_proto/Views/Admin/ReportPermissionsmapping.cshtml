				for (var i = 0; i < displayedData.length; i++) {
					modelobj = {
						in_RoleReportPermission_gid: displayedData[i].entries[0],
						in_Role_code: $("#txtrolecode").val(),
						in_recon_code: displayedData[i].entries[1],
						in_recon_name: displayedData[i].entries[2],
						in_reporttemplate_code: displayedData[i].entries[3],
						in_reporttemplate_name: displayedData[i].entries[4],
						in_report_code: displayedData[i].entries[10],
						in_report_desc: displayedData[i].entries[5],
						in_CSVDownload_flag: displayedData[i].entries[6],
						in_ExcelDownload_flag: displayedData[i].entries[7],
						in_Preview_flag: displayedData[i].entries[8],
						in_deny_flag: displayedData[i].entries[9],
						in_delete_flag: 'N',
						in_active_status: 'Y',
						in_action_by: sessionStorage.getItem("usrname")
					}
					modelArr.push(modelobj);
				}
				var displayedDataAsJSON = JSON.stringify(modelArr);
				var in_user_code = sessionStorage.getItem("usrname");
				$.ajax({
					url: '@Url.Action("saveRolePermissionsAccess", "Admin")',
					type: "post",
					data: JSON.stringify({ roledetails: displayedDataAsJSON, in_user_code: in_user_code }),
					contentType: "application/json",
					success: function (data) {
						var result = JSON.parse(data);
						if (result[0].out_result == 1 || result[0].out_result == "1") {
							$.alert({
								title: 'Recon',
								content: result[0].out_msg,
								type: 'green',
							});
							if ($("#txtmode").val() == 'Create' && $("#txtrolegid") != '0') {
								$("#txtmode").val('Edit');
								$("#txtstatus").val("Active");
								fetchroleaccess();
							}
						} else {
							$.alert({
								title: 'Recon',
								content: 'Something went wrong..! Please try after sometime..!',
								type: 'red',
							});
						}
					},
					error: function (er) {
						$.alert({
							title: 'Recon',
							content: 'Role Mapping Failed.!',
							type: 'green',
						});
					}
				});
			}
			else {
				$.alert({
					title: 'Recon',
					content: 'No Rights given.!',
					type: 'red',
				});
			}
		}
		catch (e) {
			console.log(e)
		}
	}
	 
